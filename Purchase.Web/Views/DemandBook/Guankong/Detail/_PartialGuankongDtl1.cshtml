        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="ziliaohecha">资料核查</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.ziliaohecha, SelectListTool.HiddenCodeList("需求书-管控-配额要求-资料核查"),
                   htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
            <label class="control-label col-md-2" for="yangbenliang">样本量</label>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.yangbenliang, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="TemplateName">其他说明</label>
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.qitashuoming1, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="saveBtn" type="button" value="保存" class="btn btn-primary btn-check" data-loading-text="提交中..." style="width:100px;height:35px" />
            </div>
        </div>
    </div>
</form>
<script>
    $(function () {

        $("#Guankong-dtl1-form #saveBtn").click(function () {
            if (!CommitCheck()) {
                alert("正在审核中或者非本人添加的项目");
                return false;
            }
            $("#myModal .modal-body #SeqNO").val($("#SeqNOForLocalCopy").val());
            $(this).button("loading")
            debugger;
            if ($("#myModal .modal-body #SeqNO").val() != "0") {
                var row = {
                    SeqNO: $("#myModal .modal-body #SeqNO").val(),
                    zhixingfenlei: $("#zhixingfenlei").val(), yaoyuechexingjiebie: $("#yaoyuechexingjiebie").val(), yaoyuechezhushenhe: $("#yaoyuechezhushenhe").val()
                    , yaoyuechezhuzhenbie: $("#yaoyuechezhuzhenbie").val(), jindukongzhi: $("#jindukongzhi").val(), chuchaijiankong: $("#chuchaijiankong").val()
                    , xiangmupeixun: $("#xiangmupeixun").val(), luyinjianting: $("#luyinjianting").val()
              , ziliaohecha: $("#ziliaohecha").val(), yangbenliang: $("#yangbenliang").val(), qitashuoming1: $("#qitashuoming1").val()
                };
                var insertCount = 0;
                for (var i = 0; i < sourceData.length; i++) {
                    if (sourceData[i].SeqNO == $("#myModal .modal-body #SeqNO").val()) {
                        insertCount = i;
                    }
                }
                // sourceData.splice($("#myModal .modal-body #SeqNO").val() - 1, 1, row);
                sourceData.splice(insertCount, 1, row);
            }
            else {
                //var num = sourceData[sourceData.length - 1].SeqNO + 1;
                var num = 1;
                if (sourceData.length != 0)
                { num = Number(sourceData[sourceData.length - 1].SeqNO) + 1; }
                var row = {
                    SeqNO: num,
                    zhixingfenlei: $("#zhixingfenlei").val(), yaoyuechexingjiebie: $("#yaoyuechexingjiebie").val(), yaoyuechezhushenhe: $("#yaoyuechezhushenhe").val()
                    , yaoyuechezhuzhenbie: $("#yaoyuechezhuzhenbie").val(), jindukongzhi: $("#jindukongzhi").val(), chuchaijiankong: $("#chuchaijiankong").val()
                    , xiangmupeixun: $("#xiangmupeixun").val(), luyinjianting: $("#luyinjianting").val()
              , ziliaohecha: $("#ziliaohecha").val(), yangbenliang: $("#yangbenliang").val(), qitashuoming1: $("#qitashuoming1").val()
                };
                sourceData.push(row);
            }
            loadpage();
            closeModal();
            //$(this).button("loading")
            //var params = $("#Guankong-dtl1-form").serializeJson('&');
            //params = $.extend(params, getMstObject());

            //$.post("/DemandBook/SaveGuankongDtl1", params, function (data) {
            //    $("#RequirementId").val(data);
            //    loadGuankongDtl1();
            //    closeModal();
            //});

        })
    })
</script>