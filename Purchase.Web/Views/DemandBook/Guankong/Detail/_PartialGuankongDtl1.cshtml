        <div class="form-group">
            <label class="control-label col-md-2" for="xiangmupeixun">项目培训</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.xiangmupeixun, SelectListTool.HiddenCodeList("需求书-管控-配额要求-项目培训"),
                   htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
            <label class="control-label col-md-2" for="luyinjianting">录音监听</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.luyinjianting, SelectListTool.HiddenCodeList("需求书-管控-配额要求-录音监听"),
                   htmlAttributes: new { @class = "form-control", multiple = "" })
