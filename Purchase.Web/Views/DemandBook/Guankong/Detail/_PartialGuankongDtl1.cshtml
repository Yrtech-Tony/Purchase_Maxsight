            <label class="control-label col-md-2" for="yaoyuechezhuzhenbie">邀约车主甄别</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.yaoyuechezhuzhenbie, SelectListTool.HiddenCodeList("需求书-管控-配额要求-邀约车主甄别"),
                   htmlAttributes: new { @class = "form-control", multiple = "" })
