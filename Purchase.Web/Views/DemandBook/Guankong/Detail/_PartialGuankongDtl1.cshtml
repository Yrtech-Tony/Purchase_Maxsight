            </div>
            <label class="control-label col-md-2" for="yaoyuechexingjiebie">邀约车型级别</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.yaoyuechexingjiebie, SelectListTool.HiddenCodeList("需求书-管控-配额要求-邀约车型级别"),
