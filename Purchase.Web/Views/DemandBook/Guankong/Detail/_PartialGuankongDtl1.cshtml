        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="jindukongzhi">进度控制</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.jindukongzhi, SelectListTool.HiddenCodeList("需求书-管控-配额要求-进度控制"),
