        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="luxiang">录像</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.luxiang, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-执行要求-录像"),
                          htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="paizhao">拍照</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.paizhao, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-执行要求-拍照"),
                          htmlAttributes: new { @class = "form-control", multiple = "" })
