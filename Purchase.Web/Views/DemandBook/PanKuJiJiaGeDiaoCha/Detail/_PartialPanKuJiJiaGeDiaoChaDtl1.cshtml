            <div class="col-md-8">
                @Html.DropDownListFor(m => m.fangwenshichang, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-执行要求-访问时长"),
                          htmlAttributes: new { @class = "form-control", multiple = "" })
