            <label class="control-label col-md-2" for="jindianguibiyaoqiu">进店规避要求</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.jindianguibiyaoqiu, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-执行要求-进店规避要求"),
