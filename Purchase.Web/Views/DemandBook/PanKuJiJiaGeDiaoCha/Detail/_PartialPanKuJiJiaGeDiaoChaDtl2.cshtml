@using Purchase.Web.Common
@model Purchase.DAL.Requirement_Pankujijiagediaocha_RequirementDtl2

<form id="Pankujijiagediaocha-dtl2-form">
    @Html.Hidden("SeqNO", 0)
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2" for="zhixingfenlei">执行分类</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.zhixingfenlei, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-执行分类"),
                          htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="kehufenlei">客户分类</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.kehufenlei, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-客户分类"),
                         htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="pingpaifenlei">品牌分类</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.pingpaifenlei, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-品牌分类"),
                         htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="jindianfangshi">进店方式</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.jindianfangshi, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-进店方式"),
                         htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="kaichejindian">开车进店</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.kaichejindian, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-开车进店"),
                        htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="jindianfangshibili">进店方式比例</label>
            <div class="col-md-8">

                @{
                    List<SelectListItem> IntoShopList = new List<SelectListItem>();
                    IntoShopList.Add(new SelectListItem() { Text = "", Value = "" });
                    for (int i = 1; i <= 100; i++)
                    {
                        IntoShopList.Add(new SelectListItem() { Text = i.ToString() + '%', Value = i.ToString() + '%' });
                    }
                    IntoShopList.Add(new SelectListItem() { Text = "不涉及", Value = "不涉及" });
                    IntoShopList.Add(new SelectListItem() { Text = "不限制", Value = "不限制" });
                }
                @Html.DropDownListFor(m => m.jindianfangshibili, IntoShopList, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="cheliangleixing">车辆类别</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.cheliangleixing, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-车辆类别"),
                        htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="chejiafanwei">车价范围</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.chejiafanwei, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-车价范围"),
                        htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="chexingjibie">车型级别</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.chexingjibie, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-车型级别"),
                       htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="yangbenliang">样本量</label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.yangbenliang, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="baochoujine">报酬金额</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.baochoujine, SelectListTool.HiddenCodeList("需求书-盘库及价格调查-配额要求-报酬金额"),
                        htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="TemplateName">其他说明</label>
            <div class="col-md-8">
                @Html.TextAreaFor(m => m.qitashuoming2, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="saveBtn" type="button" value="保存" class="btn btn-primary btn-check" data-loading-text="提交中..." style="width:100px;height:35px" />
            </div>
        </div>
    </div>
</form>
<script>
    $(function () {

        $("#Pankujijiagediaocha-dtl2-form #saveBtn").click(function () {
            if (!CommitCheck()) {
                alert("正在审核中或者非本人添加的项目");
                return false;
            }
            $("#myModal .modal-body #SeqNO").val($("#SeqNOForLocalCopy").val());
            $(this).button("loading")
            debugger;
            if ($("#myModal .modal-body #SeqNO").val() != "0") {
                var row = {
                    SeqNO: $("#myModal .modal-body #SeqNO").val(),
                    zhixingfenlei: $("#zhixingfenlei").val(), kehufenlei: $("#kehufenlei").val(), pingpaifenlei: $("#pingpaifenlei").val()
                    , jindianfangshi: $("#jindianfangshi").val(), kaichejindian: $("#kaichejindian").val(), jindianfangshibili: $("#jindianfangshibili").val()
                    , cheliangleixing: $("#cheliangleixing").val(), chejiafanwei: $("#chejiafanwei").val(),chexingjibie:$("#chexingjibie").val(), yangbenliang: $("#yangbenliang").val()
                    , baochoujine: $("#baochoujine").val(), qitashuoming2: $("#qitashuoming2").val()
                };
                var insertCount = 0;
                for (var i = 0; i < sourceData.length; i++) {
                    if (sourceData[i].SeqNO == $("#myModal .modal-body #SeqNO").val()) {
                        insertCount = i;
                    }
                }
                // sourceData.splice($("#myModal .modal-body #SeqNO").val() - 1, 1, row);
                sourceData.splice(insertCount, 1, row);
            }
            else {
                var num = 1;
                if (sourceData.length != 0)
                { num = Number(sourceData[sourceData.length - 1].SeqNO) + 1; }
                var row = {
                    SeqNO: num,
                    zhixingfenlei: $("#zhixingfenlei").val(), kehufenlei: $("#kehufenlei").val(), pingpaifenlei: $("#pingpaifenlei").val()
                    , jindianfangshi: $("#jindianfangshi").val(), kaichejindian: $("#kaichejindian").val(), jindianfangshibili: $("#jindianfangshibili").val()
                    , cheliangleixing: $("#cheliangleixing").val(), chejiafanwei: $("#chejiafanwei").val(), chexingjibie: $("#chexingjibie").val(), yangbenliang: $("#yangbenliang").val()
                    , baochoujine: $("#baochoujine").val(), qitashuoming2: $("#qitashuoming2").val()
                };
                sourceData.push(row);
            }
            loadpage();
            closeModal();
            //$(this).button("loading");
            //var params = $("#Pankujijiagediaocha-dtl2-form").serializeJson('&');
            //params = $.extend(params, getMstObject());

            //$.post("/DemandBook/SavePankujijiagediaochaDtl2", params, function (data) {
            //    $("#RequirementId").val(data);
            //    loadPankujijiagediaochaDtl2();
            //    closeModal();
            //});

        })
    })
</script>