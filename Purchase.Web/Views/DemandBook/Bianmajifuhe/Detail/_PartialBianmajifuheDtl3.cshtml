@using Purchase.Web.Common
@model Purchase.DAL.Requirement_Bianmajifuhe_RequirementDtl3

<form id="Bianmajifuhe-dtl3-form">
    @Html.Hidden("SeqNO", 0)
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-3" for="">申诉处理</label>
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.shensuchuli, SelectListTool.HiddenCodeList("需求书-编码及复核-申述要求-申诉处理"),
                        htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="DrivingLicense">申诉处理样本量或比例</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.shenshuchuliyangbenhuobili, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="">申诉证据截取</label>
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.shensuzhengjujiequ, SelectListTool.HiddenCodeList("需求书-编码及复核-申述要求-申诉证据截取"),
                        htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="DrivingLicense">申诉处理样本量或比例</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.shensuchuliyangbenlianghuobili1, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="RemarkDtl3">其他说明</label>
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.qitashuoming3, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input id="saveBtn" type="button" value="保存" class="btn btn-primary btn-check" data-loading-text="提交中..." style="width:100px;height:35px" />
            </div>
        </div>
    </div>
</form>
<script>
    $(function () {
        
        $("#Bianmajifuhe-dtl3-form #saveBtn").click(function () {
            if (!CommitCheck()) {
                alert("正在审核中或者非本人添加的项目");
                return false;
            }
            $(this).button("loading")
            var params = $("#Bianmajifuhe-dtl3-form").serializeJson('&');
            params = $.extend(params, getMstObject());

            $.post("/DemandBook/SaveBianmajifuheDtl3", params, function (data) {
                $("#RequirementId").val(data);
                loadBianmajifuheDtl3();
                closeModal();
            });
        })
    })
</script>