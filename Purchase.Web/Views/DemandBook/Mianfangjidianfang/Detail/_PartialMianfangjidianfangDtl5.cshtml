@using Purchase.Web.Common
@model Purchase.DAL.Requirement_Mianfangjidianfang_RequirementDtl5

<form id="Mianfangjidianfang-dtl5-form">
    @Html.Hidden("SeqNO", 0)
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2" for="luyinleixing">录音类型</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.luyinleixing, SelectListTool.HiddenCodeList("需求书-面访及电访-资料提交-录音类型"),
                      htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="hegeluyingbili">合格录音比例</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.hegeluyingbili, SelectListTool.HiddenCodeList("需求书-面访及电访-资料提交-合格录音比例"),
                       htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="wenjuanleixing">问卷类型</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.wenjuanleixing, SelectListTool.HiddenCodeList("需求书-面访及电访-资料提交-问卷类型"),
                       htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="zhengzhaoleixing">证照类型</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.zhengzhaoleixing, SelectListTool.HiddenCodeList("需求书-面访及电访-资料提交-证照类型"),
                       htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="hegezhenghaobili">合格证照比例</label>
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.hegezhenghaobili, SelectListTool.HiddenCodeList("需求书-面访及电访-资料提交-合格证照比例"),
                       htmlAttributes: new { @class = "form-control", multiple = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="qitashuoming5">其他说明</label>
            <div class="col-md-8">
                @Html.TextAreaFor(m => m.qitashuoming5, htmlAttributes: new { @class = "form-control", multiple="" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="saveBtn" type="button" value="保存" class="btn btn-primary btn-check" data-loading-text="提交中..." style="width:100px;height:35px" />
            </div>
        </div>
    </div>
</form>
<script>
    $(function () {

        $("#Mianfangjidianfang-dtl5-form #saveBtn").click(function () {
            if (!CommitCheck()) {
                alert("正在审核中或者非本人添加的项目");
                return false;
            }
            $(this).button("loading")
            var params = $("#Mianfangjidianfang-dtl5-form").serializeJson('&');
            params = $.extend(params, getMstObject());

            $.post("/DemandBook/SaveMianfangjidianfangDtl5", params, function (data) {
                $("#RequirementId").val(data);
                loadMianfangjidianfangDtl5();
                closeModal();
            });
        })
    })
</script>