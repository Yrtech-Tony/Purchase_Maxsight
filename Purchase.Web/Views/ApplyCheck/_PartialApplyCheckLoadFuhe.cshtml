@using Purchase.Service.DTO
@model IEnumerable<Quotation_FuHeDto>

<table id="quotation-table" class="table table-bordered table-condensed table-hover">
    <thead>
        <tr>
            <th>选择</th>
            @*<th>
                    序号
                </th>*@
            <th>
                供应商名称
            </th>
            <th>
                执行省份
            </th>
            <th>
                执行城市
            </th>
            <th>
                复核要求
            </th>
            <th>
                电话咨询
            </th>
            <th>
                电话回访
            </th>
            <th>
                样本编辑
            </th>
            <th>
                辅助用品
            </th>
            <th>
                编码类型
            </th>
            <th>
                问卷编程
            </th>
            <th>
                核算单位
            </th>
            <th>
                参考价格
            </th>
            <th>
                单价
            </th>
            <th>
                数量
            </th>
            <th>
                小计
            </th>
            <th>
                备注
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                double danjia = item.danjia.HasValue ? (double)item.danjia.Value : 0;
                double shuliang = Purchase.Common.Utils.String2Double(item.shuliang);
                var xiaoji = danjia * shuliang;
                //if (shuliang != 0)
                //{
                    <tr>
                        @if (item.SelectedChk)
                        {
                            <td>@Html.CheckBox("Id", true)</td>
                        }
                        else
                        {
                            <td>@Html.CheckBox("Id", false)</td>
                        }
                        <td style="display:none">@item.QuotationId</td>
                        <td style="display:none">@item.SeqNO</td>
                        <td style="display:none">@item.QuotationType</td>
                        <td>@item.SupplierName</td>
                        <td>@item.zhixingshengfen</td>
                        <td>@item.zhixingchengshi</td>
                        <td>@item.fuheyaoqiu</td>
                        <td>@item.dianhuazixun</td>
                        <td>@item.dianhuahuifang</td>
                        <td>@item.yanbenbianji</td>
                        <td>@item.fuzhuyongpin</td>
                        <td>@item.bianmaleixing</td>
                        <td>@item.wenjuanbiancheng</td>
                        <td>@item.hesuandanwei</td>
                        <td>@item.cankaojiage</td>
                        <td>@item.danjia</td>
                        <td>@item.shuliang</td>
                        <td>@Math.Round(xiaoji, 2)</td>
                        <td>@item.beizhu</td>
                    </tr>
                //}
            }
        }
    </tbody>
</table>
